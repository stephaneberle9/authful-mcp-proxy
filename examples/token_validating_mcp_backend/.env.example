# Enable JWT verification
FASTMCP_SERVER_AUTH=fastmcp.server.auth.providers.jwt.JWTVerifier

# For asymmetric verification with JWKS endpoint:
# (use 'curl https://auth.company.com/.well-known/openid-configuration | jq .' to discover OIDC configuration)
FASTMCP_SERVER_AUTH_JWT_ISSUER="https://auth.company.com"
FASTMCP_SERVER_AUTH_JWT_JWKS_URI="https://auth.company.com/.well-known/jwks.json"
FASTMCP_SERVER_AUTH_JWT_AUDIENCE="mcp-production-api"
FASTMCP_SERVER_AUTH_JWT_REQUIRED_SCOPES="read:data,write:data"
